{
  "type": "page",
  "title": "编辑文章",
  "body": {
    "type": "form",
    "name": "articleForm",
    "api": "put:${API_HOST}/v1/articles/secure/${params.id}",
    "initApi": "get:${API_HOST}/v1/articles/secure/${params.id}",
    "controls": [
      {
        "type": "text",
        "name": "title",
        "label": "标题",
        "required": true
      },
      {
        "type": "textarea",
        "name": "summary",
        "label": "摘要",
        "required": true
      },
      {
        "type": "group",
        "controls": [
          {
            "type": "editor",
            "name": "content",
            "label": "内容",
            "required": true,
            "language": "markdown"
          },
          {
            "type": "markdown",
            "name": "content",
            "label": "预览"
          }
        ]
      },
      {
        "type": "text",
        "name": "category",
        "label": "分类",
        "required": true
      },
      {
        "type": "static",
        "name": "language",
        "label": "语言",
        "disabled": true
      },
      {
        "type": "number",
        "name": "rank",
        "label": "排序",
        "required": true
      },
      {
        "type": "group",
        "mode": "inline",
        "controls": [
          {
            "type": "static",
            "name": "id",
            "label": "ID"
          },
          {
            "type": "static",
            "name": "origin_id",
            "label": "原始ID"
          }
        ]
      },
      {
        "type": "submit",
        "label": "保存"
      }
    ],
    "actions": [
      {
        "type": "button",
        "label": "发布",
        "actionType": "ajax",
        "confirmText": "确定要发布吗？",
        "api": "post:${API_HOST}/v1/articles/publish/${params.id}"
      },
      {
        "type": "button",
        "label": "翻译",
        "actionType": "ajax",
        "confirmText": "确定要翻译吗？",
        "api": "post:${API_HOST}/v1/articles/translate/${params.id}"
      }
    ]
  }
}